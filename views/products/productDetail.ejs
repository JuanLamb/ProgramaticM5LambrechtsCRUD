                        <p><input type="radio" name="color" value="naranja">Naranja</p>
                        <p><input type="radio" name="color" value="azul">Azul</p>
                    </div>
                    
                    <div class="talle-ropa">
                        <label>Talle</label>
                        <p><input type="radio" name="talle" value="uno" checked>S</p>
                        <p><input type="radio" name="talle" value="dos">M</p>
                        <p><input type="radio" name="talle" value="tres">X</p>
                        <p><input type="radio" name="talle" value="cuatro">XL</p>
                    </div>

                    <div class="botones-precio">
                        <button type="submit">Comprar</button>
